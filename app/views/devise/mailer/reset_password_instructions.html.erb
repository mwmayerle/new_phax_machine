<link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
<body style="font-family: 'Nunito', sans-serif;background: #fafafa;padding:20px">
	<img src="<%= @logo_link %>" alt="Logo" width="150">
	<div style="width: 100%;margin-top: 20px;margin-bottom: 20px;border-bottom: 1px solid darkgrey;"></div>

	<p style="font-size: 1.1em;line-height: 1.7em;">Hello <%= @resource.email %>!</p>
	<p style="font-size: 1.1em;line-height: 1.7em;">Someone has requested a link to change your password. You can do this through the link below.</p>
	<p style="font-size: 1.1em;line-height: 1.7em;"><%= link_to 'Change my password', edit_password_url(@resource, reset_password_token: @token) %></p>
	<p style="font-size: 1.1em;line-height: 1.7em;">If you didn't request this, please ignore this email.</p>
	<p style="font-size: 1.1em;line-height: 1.7em;">Your password won't change until you access the link above and create a new one.</p>
</body>

